<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share rosconkr_demos)/launch/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share rosconkr_demos)/launch/include/workshop/workshop.rviz"/>
    <arg name="config_file" value="$(find-pkg-share rosconkr_maps)/workshop/workshop.building.yaml"/>
  </include>

    <!-- TinyRobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share rmf_demos_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share rosconkr_maps)/maps/workshop/nav_graphs/0.yaml" />
      <arg name="config_file" value="$(find-pkg-share rosconkr_demos)/config/workshop/tinyRobot_config.yaml"/>
    </include>
  </group> 


    <!-- CleanerBot fleet adapter -->
  <group>
    <include file="$(find-pkg-share rmf_demos_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share rosconkr_maps)/maps/workshop/nav_graphs/1.yaml" />
      <arg name="config_file" value="$(find-pkg-share rosconkr_demos)/config/workshop/cleanerBotA_config.yaml"/>
    </include>
  </group> 

</launch>
